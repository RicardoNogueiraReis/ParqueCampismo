#include "campista.h"
#include "lotes.h"
#include <ctype.h>
#include <stdio.h>
#include <stdlib.h>

void pedirDadosLotes(lote *reservaLote){
    char eletricidade;

    do{
        printf("Tipo de alojamento [Tenda (T) // Caravana (C) // Autocaravana (A)]: ");
        scanf("%c", &reservaLote->tipoAlojamento);
        fflush(stdin);
        if(tolower(reservaLote->tipoAlojamento) != 't' && tolower(reservaLote->tipoAlojamento) !='c' && tolower(reservaLote->tipoAlojamento) !='a'){
            printf("ERRO! Caractér inválido!\n");
        }
    }while(tolower(reservaLote->tipoAlojamento) !='t' && tolower(reservaLote->tipoAlojamento) !='c' && tolower(reservaLote->tipoAlojamento) !='a');

    do{
        printf("Tem ligação à rede eletrica(S/N): ");
        scanf("%c", &eletricidade);
        fflush(stdin);

        if(tolower(eletricidade=='s')){
            reservaLote->redeEletrica='e';
        }else if(tolower(eletricidade=='n')){
            reservaLote->redeEletrica ='x';
        }else{
            printf("ERRO! Caractér inválido!");
        }

    }while(tolower(eletricidade) !='s' && tolower(eletricidade) !='n');

    printf("===== Dados do(s) campista(s) =====");
    printf("Número de campistas: ");
    scanf("%d", &reservaLote->numeroCampistas);
    fflush(stdin);
    for(int i=0;i<reservaLote->numeroCampistas;i++){

        printf("Nome do campista: ");
        gets(reservaLote->pessoaCampista.nome);

        printf("Idade do campista :");
        scanf("%d", &reservaLote->pessoaCampista.idade);
        fflush(stdin);
    }

    //Preços com eletricidade
    if(tolower(eletricidade='e')){
        if(tolower(reservaLote->tipoAlojamento=='t')){
            reservaLote->preco=3.00 /*Preço da eletricidade*/ + (3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 4.50; // Preço da tenta
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }

    if(tolower(eletricidade='e')){
        if(tolower(reservaLote->tipoAlojamento=='c')){
            reservaLote->preco=3.00 /*Preço da eletricidade*/ + (3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 6.00; // Preço da caravana
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }

    if(tolower(eletricidade='e')){
        if(tolower(reservaLote->tipoAlojamento=='a')){
            reservaLote->preco=3.00 /*Preço da eletricidade*/ + (3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 14.90; // Preço da autocaravana
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }

    //Preços sem eletricidade
    if(tolower(eletricidade='x')){
        if(tolower(reservaLote->tipoAlojamento=='t')){
            reservaLote->preco=(3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 4.50; // Preço da tenta
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }

    if(tolower(eletricidade='x')){
        if(tolower(reservaLote->tipoAlojamento=='c')){
            reservaLote->preco=(3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 6.00; // Preço da caravana
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }

    if(tolower(eletricidade='x')){
        if(tolower(reservaLote->tipoAlojamento=='a')){
            reservaLote->preco=(3.50*(reservaLote->numeroCampistas)) /*Preço por número de campistas*/ + 14.90; // Preço da autocaravana
            printf("Preço a pagar: %.2f", reservaLote->preco);
        }
    }
}

